<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
<!--    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IranSansBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/iran_sans_bold.ttf</item>
    </style>
    <style name="bankFont" parent="android:TextAppearance">
        <item name="fontPath">fonts/Far_Bank.ttf</item>
    </style>
    <style name="IconFonts_R" parent="android:TextAppearance">
        <item name="fontPath">fonts/icomoon.ttf</item>
    </style>
    <style name="IconFonts" parent="android:TextAppearance">
        <item name="fontPath">fonts/iconFont.ttf</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/textHint</item>
<!--        <item name="colorControlNormal">@color/textColor2</item>-->
<!--        <item name="colorControlActivated">@color/textColor2</item>-->
<!--        <item name="colorControlHighlight">@color/textColor2</item>-->
    </style>

    <style name="EditTextHint2" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
<!--        <item name="colorControlActivated">@color/textColorPrimary</item>-->
<!--        <item name="colorControlHighlight">@color/textColorPrimary</item>-->
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/textSize_16dp</item>
    </style>
    <style name="TextLabelProfile" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/textSize_12dp</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/textSize_16dp</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="EditTextHint3" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="colorControlNormal">@android:color/transparent</item>
<!--        <item name="colorControlActivated">@color/textColor2</item>-->
<!--        <item name="colorControlHighlight">@color/textColor2</item>-->
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="IconFontMarket" parent="android:TextAppearance">
        <item name="fontPath">fonts/market.ttf</item></style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/textColorSecondary</item>
    </style>
    <style name="scrollUpdate">
        <item name="colorAccent">@color/red</item>
        <item name="color">@color/red</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
    </style>


    <style name = "AppTheme.AppBarOverlay" parent = "ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name = "AppTheme.PopupOverlay" parent = "ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogStyleTransparrent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/textHint</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
<!--        <item name="android:textSize">14sp</item>-->
        <item name="android:textColor">@color/textHint</item>
        <item name = "android:fontFamily">@fonts/iran_sans_normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.TransparentGray"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparentGray</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="mdtp_time_label">
        <item name="android:textSize">@dimen/mdtp_time_label_size</item>
        <item name="android:textColor">@color/mdtp_numbers_text_color</item>
    </style>

    <style name="mdtp_ampm_label">
        <item name="android:textSize">@dimen/mdtp_ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/mdtp_ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IranSansBoldf" parent="android:TextAppearance">
        <item name="fontPath">fonts/iran_sans_bold.ttf</item>
    </style>

    <style name="mdtp_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/mdtp_material_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/mdtp_button_color</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="mdtp_ActionButton.Text" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/mdtp_material_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minWidth">@dimen/mdtp_material_button_minwidth</item>
        <item name="android:paddingLeft">@dimen/mdtp_material_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/mdtp_material_button_textpadding_horizontal</item>
        <item name="android:textColor">@color/mdtp_button_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Widget.BottomNavigationView"  parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iransans_mobile_bold</item>
    </style>
    <style name="Regular">
        <item name="android:fontFamily">@font/iransans_mobile_bold</item>
        <item name="fontFamily">@font/iransans_mobile_bold</item>
        <item name="android:textStyle">normal</item>
    </style>









    <style name="TagGroup2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_inputHint">اضافه کردن برچسب</item>
        <item name="atg_borderColor">#FFFFFF</item>
        <item name="atg_textColor">#FFFFFF</item>
        <item name="atg_backgroundColor">@color/textColorPrimary</item>
        <item name="atg_dashBorderColor">#FFFFFF</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#ffffff</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.0dp</item>
        <item name="atg_textSize">14sp</item>
        <item name="atg_horizontalSpacing">8dp</item>
        <item name="atg_verticalSpacing">4dp</item>
        <item name="atg_horizontalPadding">12dp</item>
