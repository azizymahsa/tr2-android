<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:foreground="?attr/selectableItemBackground"
        android:text="جدیدترین ها"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_18dp" />


    <com.example.moeidbannerlibrary.banner.BannerLayout
        android:id="@+id/bNewestVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250dp_r"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        app:autoPlaying="true"
        app:centerScale="1.8"
        app:itemSpace="5"
        app:moveSpeed="0.5"
        app:showIndicator="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvArchiveVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="آرشیو عکس"
            android:textColor="@color/redBack"
            android:padding="8dp"
            android:layout_margin="@dimen/_10dp"
            android:textSize="@dimen/textSize_12dp"
            android:background="@drawable/background_border_a"
            />

        <TextView
            android:id="@+id/tvMyFavoriteVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="فیلم های مورد علاقه من"
            android:textColor="@color/redBack"
            android:padding="8dp"
            android:layout_margin="@dimen/_10dp"
            android:textSize="@dimen/textSize_12dp"
            android:background="@drawable/background_border_a"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="محبوب ترین ها"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textSize="@dimen/textSize_18dp"
            android:gravity="right"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivFavorite2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="15dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/un_select_step"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivFavorite3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                app:riv_corner_radius="15dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/un_select_step"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivFavorite1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:riv_corner_radius="15dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"/>
            <ImageView
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:src="@drawable/un_select_step"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
