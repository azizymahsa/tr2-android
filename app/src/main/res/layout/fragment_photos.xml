<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="جدیدترین ها"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_12dp" />

        <com.example.moeidbannerlibrary.banner.BannerLayout
            android:id="@+id/bNewestPhotos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:textAlignment="center"
            app:autoPlaying="false"
            app:centerScale="1.3"
            app:itemSpace="5"
            app:moveSpeed="0.9"
            app:showIndicator="false"/>
        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
            android:id="@+id/indicatorNewestPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:spi_dotColor="@color/grayColor"
            app:spi_dotSelectedColor="@color/textColorPrimary"
            app:spi_dotSelectedSize="@dimen/_8sdp"
            app:spi_dotSize="@dimen/_4sdp"
            app:spi_dotSpacing="@dimen/_5sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3.5">

            <TextView
                android:id="@+id/tvArchivePhotos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_weight="1"
                android:background="@drawable/background_border_a"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="8dp"
                android:text="آرشیو عکس"
                android:textColor="@color/redBack"
                android:textSize="@dimen/textSize_10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMyFavoritePhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_weight="1.5"
                android:background="@drawable/background_border_a"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="8dp"
                android:text="عکس های مورد علاقه من"
                android:textColor="@color/redBack"
                android:textSize="@dimen/textSize_10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="top|right"
                android:singleLine="true"
                android:text="محبوب ترین ها"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_12dp"
                android:textStyle="" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvEmptyFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="هیچ عکسی در این گروه یافت نشد."
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSize_14dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llFavorites"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginRight="@dimen/_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivFavorite2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:adjustViewBounds="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="15dp"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/un_select_step"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivFavorite3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="15dp"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/un_select_step"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivFavorite1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="15dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/un_select_step"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>
