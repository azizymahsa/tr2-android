<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMTNCharge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center|end"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20" />

        <ImageView
            android:id="@+id/btnIrancellRecent"
            android:layout_width="@dimen/_45dp"
            android:layout_height="@dimen/_45dp"
            android:src="@drawable/ic_list"
            android:padding="10dp"
            android:background="@drawable/button_small_border"
            android:layout_marginRight="5dp"
            android:foreground="?attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/ivContactI"
            android:src="@drawable/ic_phone_book"
            android:layout_width="@dimen/_45dp"
            android:layout_height="@dimen/_45dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_small_border"
            android:foreground="?attr/selectableItemBackground" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:gravity="center|end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center|end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:text="شماره موبایل"
                    android:textColor="@color/warmGray" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompletePhoneNumberIrancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:paddingLeft="24dp"
                    android:text=""
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textColor="@color/chargePackTextColor"
                    android:textSize="@dimen/textSize_16dp"
                    android:background="@drawable/background_spinner_amount_charge"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:text="مبلغ (ریال)"
                    android:textColor="@color/warmGray" />

                <Spinner
                    android:id="@+id/spinnerAmountIrancell"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:tag="allBox"
                    android:background="@drawable/background_spinner_amount_charge" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlIrancellSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerIrancell"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/background_spinner_amount_charge"
            android:gravity="right"
            android:tag="irancell"/>

        <Spinner
            android:id="@+id/spinnerChargeTypeIrancell"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_spinner_amount_charge" />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:text="شارژ شگفت انگیز"
            android:textColor="@color/chargePackTextColor"
            android:textSize="@dimen/textSize_14dp"/>

        <RadioButton
            android:id="@+id/rbSpecialChargeIrancell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/radius_15dp"
            android:buttonTint="@color/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:text="شارژ عادی"
            android:textColor="@color/chargePackTextColor"
            android:textSize="@dimen/textSize_14dp" />

        <RadioButton
            android:id="@+id/rbNormalChargeIrancell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/textColorPrimary" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center|end"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <include
                android:id="@+id/btnChargeConfirm"
                layout="@layout/circular_progress_button_small" />

        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25dp"
            android:gravity="center_vertical"
            android:text="درصورتی که ترابرد کرده اید اپراتور خود را انتخاب کنید"
            android:textColor="@color/textColorSecondary"
            android:layout_marginEnd="@dimen/_10dp"
            android:textSize="@dimen/textSize_12dp" />
        <ImageView
            android:src="@drawable/ic_warning"
            android:tint="@color/imageBookmarkNewsTintColor"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
          />

    </LinearLayout>
</LinearLayout>