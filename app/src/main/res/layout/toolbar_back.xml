<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:layout_height="102dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:paddingEnd="10dp"
                android:layout_alignParentStart="true"
                style="?android:attr/borderlessButtonStyle"
                android:layout_centerVertical="true"
                android:tint="@color/mainMenuColor"
                android:src="@drawable/arrowleft" />


            <FrameLayout
                android:id="@+id/flLogoToolbar"
                android:layout_toEndOf="@+id/imgBack"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_logo_traap"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="50dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:tint="@color/mainMenuColor"
                android:src="@drawable/ic_menu_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:text="عنوان"
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="@color/textColorTitle"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rlShirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_shirt"
                    android:layout_marginEnd="32dp"/>

                <TextView
                    android:id="@+id/tvPopularPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="10"
                    android:textStyle="bold"
                    android:textColor="@color/textColorTitle"
                    android:textSize="@dimen/textSize_12dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_toStartOf="@+id/rlShirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="نام کاربر"
                android:layout_marginEnd="4dp"
                android:textStyle="bold"
                android:textColor="@color/textColorTitle"
                android:textSize="@dimen/textSize_16dp"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
