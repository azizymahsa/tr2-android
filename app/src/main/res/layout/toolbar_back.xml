<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:layout_height="102dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <FrameLayout
                android:id="@+id/flLogoToolbar"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_logo_traap"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="50dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:tint="@color/mainMenuColor"
                android:src="@drawable/ic_menu_black_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgBack1"
                    android:layout_width="@dimen/_35dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/mainMenuColor"
                    android:src="@drawable/ic_undo" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/imgBack1"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="left"
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="@color/textColorTitle"
                    android:textSize="@dimen/textSize_14dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_toLeftOf="@+id/rlShirt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="نام کاربر"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textColor="@color/textColorTitle"
                android:textSize="@dimen/textSize_14dp"/>

            <RelativeLayout
                android:id="@+id/rlShirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_shirt"
                    android:layout_marginRight="32dp"/>

                <TextView
                    android:id="@+id/tvPopularPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="12"
                    android:textStyle="bold"
                    android:textColor="@color/textColorTitle"
                    android:textSize="@dimen/textSize_12dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
