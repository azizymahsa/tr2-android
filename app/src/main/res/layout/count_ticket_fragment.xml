<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.login.user.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center|right"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal">



            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100">

                <include
                    android:id="@+id/btnMCIPackConfirm"
                    layout="@layout/slider_item_view" />

            </FrameLayout>



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/dotted"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="برای مشاهده جایگاه های فعال ( دارای ظرفیت خالی) لطفا تعداد بلیت درخواستی تان را مشخص کنید"
                android:textColor="#484848"
                android:textSize="@dimen/textSize_14dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:padding="10dp">

                <LinearLayout
                    android:layout_width="@dimen/_90dp"
                    android:layout_height="@dimen/_30dp"
                    android:gravity="center|left"
                    android:background="@drawable/background_l_r_round"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvM"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/g_txt_title2"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/g_txt_title2"
                        android:textSize="12dp"
                        android:text="1"
                        android:background="@drawable/background_rectangle_with_out_round"
                        />


                    <TextView
                        android:id="@+id/tvP"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/g_txt_title2"
                        android:textSize="19dp"
                        />
                </LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="98"
                android:layout_height="wrap_content"
                android:text="تعداد بلیت های درخواستی شما:"
                android:textColor="@color/textColorStadiumName"
                android:textSize="@dimen/textSize_14dp"
                android:textAppearance="@style/IranSansBoldf"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/dotted"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:padding="@dimen/_5sdp"
                android:text="حداکثر تعداد بلیت قابل خرید برای شما، مطابق قوانین مصوب 5 بلیت می باشد"
                android:textColor="@color/textColorStadiumName"
                android:textSize="@dimen/textSize_14dp"

                />

            <ImageView
                android:id="@+id/ivFullInfo"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/danger" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:visibility="gone">

                    <include
                        android:id="@+id/btnBackToDetail"
                        layout="@layout/return_button"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="100">

                    <include
                        android:id="@+id/btnPaymentConfirm"
                        layout="@layout/circular_progress_button_next"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"

                        android:layout_margin="2dp" />
                </FrameLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>