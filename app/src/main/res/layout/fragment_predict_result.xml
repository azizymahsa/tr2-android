<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="15dp"
            app:contentPaddingTop="8dp"
            app:contentPaddingRight="1dp"
            app:contentPaddingLeft="1dp"
            app:contentPaddingBottom="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMatchDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_16dp"
                    android:textColor="@color/textColorSecondary"
                    android:gravity="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/rlAway"
                                android:layout_width="@dimen/_120dp"
                                android:layout_height="@dimen/_120dp"
                                android:background="@drawable/ic_ball"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:layout_alignParentTop="true">

                                <ImageView
                                    android:id="@+id/imgAwayHeader"
                                    android:layout_width="@dimen/_60dp"
                                    android:layout_height="@dimen/_60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/tvAwayHeader"
                                    android:layout_below="@+id/imgAwayHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="عنوان"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textSize_16dp"
                                    android:textColor="@color/textColorSecondary"
                                    android:gravity="center"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/llAwayResultList"
                                android:layout_below="@+id/rlAway"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal"/>

                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/drawerSepratorColor"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/rlHomeHeader"
                                android:layout_width="@dimen/_120dp"
                                android:layout_height="@dimen/_120dp"
                                android:background="@drawable/ic_ball"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:layout_alignParentTop="true">

                                <ImageView
                                    android:id="@+id/imgHomeHeader"
                                    android:layout_width="@dimen/_60dp"
                                    android:layout_height="@dimen/_60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/tvHomeHeader"
                                    android:layout_below="@+id/imgHomeHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="عنوان"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/textSize_16dp"
                                    android:textColor="@color/textColorSecondary"
                                    android:gravity="center"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/llHomeResultList"
                                android:layout_below="@+id/rlHomeHeader"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgCupLogo"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/tvCurrentMatchResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="12dp"
                            android:textStyle="bold"
                            android:textSize="@dimen/textSize_18dp"
                            android:background="@color/white"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="center"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llPredict"
            android:layout_below="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/background_predict_banner">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPredictText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پیش بینی کن برنده شو!"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/textColorTitle"
                    android:textSize="@dimen/textSize_14dp"/>

                <LinearLayout
                    android:id="@+id/llTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTimePredict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00 : 00 : 00 : 00"
                        android:textStyle="bold"
                        android:textColor="@color/textColorTitle"
                        android:textSize="@dimen/textSize_14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مانده به پایان پیش\u200cبینی"
                        android:textColor="@color/textColorTitle"
                        android:textSize="@dimen/textSize_12dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/textSize_20dp"
            android:textColor="@color/textColorSecondary"
            android:text="پیش بینی شما:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgAway3"
                android:layout_width="@dimen/_120dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_120dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"/>

            <NumberPicker
                android:id="@+id/numPickerAway"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_120dp"
                android:layout_gravity="center"
                android:background="@drawable/background_rectangle_white_8dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvAwayPredict"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/background_rectangle_white_8dp"
                android:hint="؟"
                android:maxLength="2"
                android:visibility="gone"
                android:layout_gravity="center"
                android:nextFocusDown="@+id/edtHomePredict"
                android:inputType="number"
                android:textSize="@dimen/textSize_16dp"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvHomePredict"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:hint="؟"
                android:maxLength="2"
                android:background="@drawable/background_rectangle_white_8dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textSize="@dimen/textSize_16dp"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"/>

            <NumberPicker
                android:id="@+id/numPickerHome"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_120dp"
                android:layout_gravity="center"
                android:background="@drawable/background_rectangle_white_8dp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imgHome3"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitXY"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/btnSendPredict"
            android:layout_width="@dimen/_180dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            android:background="@drawable/background_button_login"
            android:text="ثبت پیش بینی"
            android:textColor="@color/textColorButton"
            android:textSize="@dimen/textSize_14dp"
            android:textStyle="bold"
            android:transitionName="transition"
            app:finalCornerAngle="50dp"
            app:spinning_bar_color="@color/white"
            app:initialCornerAngle="50dp"
            app:spinning_bar_width="2dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvPredictEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="@dimen/textSize_18dp"
            android:visibility="gone"
            android:textColor="@color/textColorPrimary"
            android:text="تاکنون کسی اقدام به پیش بینی نکرده است."/>

        <LinearLayout
            android:id="@+id/llChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingRight="8dp"
                android:gravity="right"
                android:textSize="@dimen/textSize_18dp"
                android:text="آمار پیش بینی شرکت کنندگان:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvHomePieChartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="میزبان"
                            android:layout_marginRight="4dp"
                            android:paddingLeft="16dp"
                            android:layout_toRightOf="@+id/imgAway"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="right"/>

                        <View
                            android:id="@+id/vColorHomePieChart"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textHint"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvEqualPieChartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مساوی"
                            android:layout_marginRight="4dp"
                            android:paddingLeft="16dp"
                            android:layout_toRightOf="@+id/imgAway"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="right"/>

                        <View
                            android:id="@+id/vColorEqualPieChart"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textHint"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAwayPieChartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="میهمان"
                            android:layout_marginRight="4dp"
                            android:paddingLeft="16dp"
                            android:layout_toRightOf="@+id/imgAway"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textColorSecondary"
                            android:gravity="right"/>

                        <View
                            android:id="@+id/vColorAwayPieChart"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textHint"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.anychart.AnyChartView
                        android:id="@+id/chartViewPie"
                        android:layout_width="match_parent"
                        android:paddingLeft="32dp"
                        android:paddingBottom="16dp"
                        android:background="@android:color/transparent"
                        android:layout_height="@dimen/any_chart_height" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressPieChart"
                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="@dimen/_150dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        android:translationZ="3dp"
                        app:indicatorColor="@color/textColorPrimary"
                        app:indicatorName="BallScaleMultipleIndicator" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/white"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChartLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200dp"
                        android:visibility="gone"
                        android:layout_weight="4">

                        <LinearLayout
                            android:id="@+id/viewY"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_chart_up"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="12dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/textHint"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/viewX"
                            android:layout_toLeftOf="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textHint"/>

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_chart_right"/>

                        <LinearLayout
                            android:layout_toRightOf="@+id/viewY"
                            android:layout_above="@+id/viewX"
                            android:layout_width="match_parent"
                            android:layout_marginRight="24dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/rlChart1"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:visibility="visible"
                                android:orientation="vertical"
                                android:layout_height="match_parent">

                                <Space
                                    android:id="@+id/spChartPredictOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="50"/>

                                <LinearLayout
                                    android:layout_above="@+id/rlChartPredictOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <View
                                        android:id="@+id/vColorAwayOne"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/textColorPrimary"/>

                                    <TextView
                                        android:id="@+id/tvChartPredictOne"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/textSize_12dp"
                                        android:gravity="center"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginLeft="2dp"
                                        android:textColor="@color/textColorSecondary"
                                        android:text="0-0"/>

                                    <View
                                        android:id="@+id/vColorHomeOne"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/textHint"/>

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/rlChartPredictOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/background_border_gray_8dp">

                                    <TextView
                                        android:id="@+id/tvChartTotalUserOne"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/textColorSecondary"
                                        android:textSize="@dimen/textSize_10dp"
                                        android:text="0 %"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/rlChart2"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:visibility="visible"
                                android:orientation="vertical"
                                android:layout_height="match_parent">

                                <Space
                                    android:id="@+id/spChartPredictTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="50"/>

                                <LinearLayout
                                    android:layout_above="@+id/rlChartPredictTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <View
                                        android:id="@+id/vColorAwayTwo"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/textColorPrimary"/>

                                    <TextView
                                        android:id="@+id/tvChartPredictTwo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/textSize_12dp"
                                        android:gravity="center"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginLeft="2dp"
                                        android:textColor="@color/textColorSecondary"
                                        android:text="0-0"/>

                                    <View
                                        android:id="@+id/vColorHomeTwo"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/textHint"/>

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/rlChartPredictTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/background_border_gray_8dp">

                                    <TextView
                                        android:id="@+id/tvChartTotalUserTwo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/textColorSecondary"
                                        android:textSize="@dimen/textSize_10dp"
                                        android:text="0 %"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/rlChart3"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:visibility="visible"
                                android:orientation="vertical"
                                android:layout_height="match_parent">

                                <Space
                                    android:id="@+id/spChartPredictThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="50"/>

                                <LinearLayout
                                    android:layout_above="@+id/rlChartPredictThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <View
                                        android:id="@+id/vColorAwayThree"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/textColorPrimary"/>

                                    <TextView
                                        android:id="@+id/tvChartPredictThree"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/textSize_12dp"
                                        android:gravity="center"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginLeft="2dp"
                                        android:textColor="@color/textColorSecondary"
                                        android:text="0-0"/>

                                    <View
                                        android:id="@+id/vColorHomeThree"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/textHint"/>

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/rlChartPredictThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/background_border_gray_8dp">

                                    <TextView
                                        android:id="@+id/tvChartTotalUserThree"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/textColorSecondary"
                                        android:textSize="@dimen/textSize_10dp"
                                        android:text="0 %"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcBarChart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="6dp"
                                android:layout_height="wrap_content"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="5dp"
                                android:background="@color/textHint"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="1dp"
                                android:background="@color/textHint"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="5dp"
                                android:background="@color/textHint"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginRight="6dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/textSize_10dp"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="1dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/textSize_10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAwayChartTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@+id/imgAway"
                        android:gravity="right"
                        android:text="عنوان"
                        android:textColor="@color/textColorSecondary" />

                    <View
                        android:id="@+id/vColorAwayFour"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/textHint"/>

                    <TextView
                        android:id="@+id/tvHomeChartTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عنوان"
                        android:layout_marginRight="4dp"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@+id/imgAway"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColorSecondary"
                        android:gravity="right"/>

                    <View
                        android:id="@+id/vColorHomeFour"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/textHint"/>

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingRight="8dp"
            android:gravity="right"
            android:textSize="@dimen/textSize_18dp"
            android:text="آخرین بازی های رودرروی دو تیم:"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcMatchResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>