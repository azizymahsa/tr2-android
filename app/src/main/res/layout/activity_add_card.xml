<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="4dp"
        android:elevation="3dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_main_header" />

<!--            <RelativeLayout-->
<!--                android:id="@+id/header"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/img_header_background" />-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <include layout="@layout/toolbar_back" />

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_container">

        <include
            android:id="@+id/btnConfirm"
            layout="@layout/circular_progress_button"
            android:layout_width="@dimen/_200dp"
            android:layout_height="@dimen/_35dp"
            android:layout_centerInParent="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAddCard"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            card_view:cardBackgroundColor="@color/cardview_dark_background"
            card_view:cardCornerRadius="@dimen/radius_15dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/ivBackCard"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:scaleType="fitXY" />

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/tvBankName"
                      android:layout_width="120dp"
                      android:layout_height="@dimen/_20dp"
                      android:layout_alignParentEnd="true"
                      android:layout_margin="10dp"
                      android:gravity="center"
                      android:textColor="@color/textColorTitle"
                      android:visibility="invisible"
                      android:textSize="@dimen/textSize_12dp" />

                  <ImageView
                      android:id="@+id/ivBankLogo"
                      android:layout_width="70dp"
                      android:layout_height="40dp"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="10dp"
                      android:padding="5dp"
                      android:visibility="invisible" />

                  <TextView
                      android:id="@+id/tv1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/ivBankLogo"
                      android:layout_centerHorizontal="true"
                      android:layout_gravity="center"
                      android:paddingEnd="10dp"
                      android:text="شماره کارت را وارد نمایید"
                      android:textColor="@color/textColorTitle"
                      android:textSize="@dimen/textSize_16dp"
                      android:visibility="visible"/>

                  <ru.kolotnev.formattedittext.MaskedEditText
                      android:id="@+id/etNumberAddCard"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tv1"
                      android:background="@null"
                      android:backgroundTint="@color/textColorTitle"
                      android:gravity="center"
                      android:hint="شماره کارت"
                      android:imeOptions="actionDone"
                      android:maxLines="1"
                      android:singleLine="true"
                      android:textColor="@color/textColorTitle"
                      android:textSize="@dimen/textSize_18dp"
                      app:mask="9 9 9 9 - 9 9 9 9 - 9 9 9 9 - 9 9 9 9"
                      app:placeholder="_" />

                  <LinearLayout
                      android:id="@+id/llNumberCard"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tv1"
                      android:orientation="horizontal"
                      android:visibility="gone">

                      <com.alimuzaffar.lib.pin.PinEntryEditText
                          android:id="@+id/codeView1"
                          android:layout_width="0dp"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:layout_marginStart="10dp"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="100"
                          android:cursorVisible="false"
                          android:inputType="number"
                          android:maxLength="4"
                          android:textColor="@color/textColorTitle"
                          android:textSize="14dp"
                          app:pinLineColors="@color/textColorTitle" />

                      <com.alimuzaffar.lib.pin.PinEntryEditText
                          android:id="@+id/codeView2"
                          android:layout_width="0dp"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="100"
                          android:cursorVisible="false"
                          android:inputType="number"
                          android:maxLength="4"
                          android:textColor="@color/textColorTitle"
                          android:textSize="14dp"
                          app:pinLineColors="@color/textColorTitle" />

                      <com.alimuzaffar.lib.pin.PinEntryEditText
                          android:id="@+id/codeView3"
                          android:layout_width="0dp"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="100"
                          android:cursorVisible="false"
                          android:inputType="number"
                          android:maxLength="4"
                          android:textColor="@color/textColorTitle"
                          android:textSize="14dp"
                          app:pinLineColors="@color/textColorTitle" />

                      <com.alimuzaffar.lib.pin.PinEntryEditText
                          android:id="@+id/codeView4"
                          android:layout_width="0dp"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="100"
                          android:cursorVisible="false"
                          android:inputType="number"
                          android:maxLength="4"
                          android:textColor="@color/textColorTitle"
                          android:textSize="14dp"
                          app:pinLineColors="@color/textColorTitle" />


                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/etNumberAddCard"
                      android:layout_marginTop="24dp"
                      android:orientation="horizontal">

                      <EditText
                          android:id="@+id/etFullName"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="100"
                          android:background="@null"
                          android:gravity="end|center"
                          android:hint="نام و نام خانوادگی"
                          android:imeOptions="actionDone"
                          android:maxLines="1"
                          android:singleLine="true"
                          android:textColor="@color/textColorTitle"
                          android:textColorHint="@color/textColorTitle"
                          android:textSize="@dimen/textSize_14dp" />

                  </LinearLayout>


          </RelativeLayout>

      </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBarcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_scan"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="lottie/barcode.json"
                    app:lottie_loop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="کارت خود را اسکن نمایید."
                    android:textAppearance="@style/IranSansBold"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/textSize_16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <include layout="@layout/loading"
        android:visibility="gone"/>

</LinearLayout>
