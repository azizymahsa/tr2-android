<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.login.user.UserActivity">

    <include
        android:id="@+id/toolbar_container"
        layout="@layout/toolbar"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_container"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/enter"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center">

                <View
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_centerInParent="true"
                    />

                <RelativeLayout
                    android:id="@+id/rlImage"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_background"
                    android:foreground="?attr/selectableItemBackground">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerHorizontal="true"
                        app:civ_border_color="@color/currentColor"
                        app:civ_border_width="1dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center"
                        android:textColor="@color/currentColor"
                        android:textSize="@dimen/_20sdp"

                        />

                </RelativeLayout>
                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sdp"
                    android:layout_below="@+id/rlImage"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100">

                <ir.trap.tractor.android.utilities.ClearableEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:hint="@string/enter_first_name"
                    android:textSize="@dimen/_14sdp"
                    android:backgroundTint="@color/textColor"
                    android:textColor="@color/textColor"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    />

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40" />

        </LinearLayout>

     <!--   <com.google.android.material.textfield.TextInputLayout app:hintTextAppearance="@style/TextLabel"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:theme="@style/EditTextHint"
            android:layout_marginTop="@dimen/_10sdp"
            >




        </com.google.android.material.textfield.TextInputLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center|right"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100">
            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:hint="@string/enter_last_name"
                android:textSize="@dimen/_14sdp"
                android:backgroundTint="@color/textColor"
                android:textColor="@color/textColor"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true"
                />

        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40" />

    </LinearLayout>


      <!--  <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            >




        </com.google.android.material.textfield.TextInputLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100">
                <EditText
                    android:id="@+id/etInvite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:hint="کد معرف(اختیاری)"
                    android:textSize="@dimen/_14sdp"
                    android:backgroundTint="@color/textColor"
                    android:textColor="@color/textColor"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginBottom="@dimen/_20dp"

                    />

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40" />

        </LinearLayout>


      <!--  <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            >




        </com.google.android.material.textfield.TextInputLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100">

                <include layout="@layout/circular_progress_button_small"
                    android:id="@+id/btnConfirm"/>

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/toolbar_container"
        android:background="@drawable/shadow_b"
        android:backgroundTint="@color/white"/>
</RelativeLayout>