<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:background="@drawable/background_main_header" />

            <!--            <RelativeLayout-->
            <!--                android:id="@+id/header"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="102dp"-->
            <!--                android:background="@drawable/img_header_background" />-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent">


                <include layout="@layout/toolbar_back" />

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="horizontal">



                           <LinearLayout
                            android:id="@+id/rl1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_height="wrap_content"
                                android:weightSum="6">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/background_border_gray"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/etSearch"
                                        android:layout_width="0dp"
                                        android:layout_weight="4"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/ll2"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="@dimen/_5dp"
                                        android:background="@null"                                        android:hint="جستجو کنید"
                                        android:textColor="@color/gray"
                                        android:textColorHint="#b9b9b9"
                                        android:textSize="@dimen/textSize_12dp" />

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"                                        android:layout_height="match_parent"
                                        android:padding="@dimen/_5dp"
                                        android:rotation="90"
                                        android:src="@drawable/ic_search"
                                        android:tint="@color/gray" />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/ll2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="@dimen/_5dp"
                                    android:text="فیلتر"
                                    android:visibility="invisible"
                                    android:textColor="@color/textColorPrimary"
                                    android:textColorHint="#b9b9b9"
                                    android:textSize="@dimen/textSize_16dp" />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@drawable/background_border_profile">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="4"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/ll2"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="@dimen/_5dp"
                                        android:text="فیلتر"
                                        android:textColor="@color/textColorPrimary"
                                        android:textColorHint="#b9b9b9"
                                        android:textSize="@dimen/textSize_12dp" />

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="1.2"                                        android:layout_height="match_parent"
                                        android:paddingEnd="@dimen/_5dp"
                                        android:src="@drawable/ic_filter"
                                        android:tint="@color/textColorPrimary" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center|end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="@dimen/textSize_10dp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/transactionRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />
                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</RelativeLayout>
