<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:background="@drawable/background_main_header"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent">

            <include layout="@layout/toolbar_back" />

        </androidx.appcompat.widget.Toolbar>

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/slidingLayout"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            app:umanoPanelHeight="0dp"
            app:umanoShadowHeight="4dp"
            app:umanoParallaxOffset="0dp"
            app:umanoOverlay="true"
            app:umanoClipPanel="false"
            android:visibility="visible">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="16dp"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_60sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            style="@style/Widget.MaterialComponents.CardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:strokeColor="@color/borderColorGray"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="5dp"
                            app:cardCornerRadius="5dp"
                            app:cardMaxElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_70sdp"
                                android:orientation="vertical">

                                <com.google.android.material.tabs.TabLayout
                                    android:id = "@+id/tabLayout"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    app:tabIndicatorHeight="0dp"
                                    app:tabGravity="center"
                                    android:layout_gravity="center"
                                    style="@style/TabLayoutStyle"
                                    android:background="@drawable/background_border_gray"
                                    app:tabBackground="@drawable/tab_background"
                                    app:tabTextColor="@drawable/tab_text_color"
                                    app:tabMode="fixed"/>

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/view_pager"
                                    android:layout_width="match_parent"
                                    android:layout_height="500dp"
                                    android:layout_marginTop="16dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPoints"
                            style="@style/Widget.MaterialComponents.CardView"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="3dp"
                            app:strokeColor="@color/borderColorGray"
                            app:contentPadding="2dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="false"
                            app:cardCornerRadius="@dimen/point_card_radius"
                            app:cardMaxElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/background_border_white_full"
                                android:padding="2dp">

                                <TextView
                                    android:id="@+id/tvPointScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/point_text_height"
                                    android:textStyle="bold"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/textColorTitle"
                                    android:textSize="@dimen/_48sdp"
                                    android:text="123"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/textColorTitle"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_20sdp"
                                    android:text="تراپ"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

        </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    </RelativeLayout>

</FrameLayout>


