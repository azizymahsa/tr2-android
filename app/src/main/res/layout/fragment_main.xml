                                android:id="@+id/imgF6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:riv_corner_radius="15dp"
                                app:riv_mutate_background="true"
                                android:scaleType="fitXY"
                                app:riv_oval="false" />

