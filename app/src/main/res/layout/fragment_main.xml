<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.main.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@color/ef_grey">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>

            <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_5sdp"
                app:spi_dotColor="@color/white"
                app:spi_dotSelectedColor="@color/currentColor"
                app:spi_dotSelectedSize="@dimen/_8sdp"
                app:spi_dotSize="@dimen/_4sdp"
                app:spi_dotSpacing="@dimen/_5sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/llTourism"
            android:gravity="center"
            android:padding="8dp">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnDoTransfer"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="کارت به کارت"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnChargeSimCard"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="شارژ"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnPackSimCard"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="بسته"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnBill"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="قبض"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTourism"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="8dp">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnHotel"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="هتل"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnFlight"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="هواپیما"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/btnBus"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/background_button_login"
                app:spinning_bar_width="2dp"
                android:text="اتوبوس"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                app:initialCornerAngle="50dp"
                app:spinning_bar_color="@color/white"
                app:finalCornerAngle="80dp"
                android:transitionName="transition"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>