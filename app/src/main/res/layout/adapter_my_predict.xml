<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingTop="@dimen/_10dp"
        android:orientation="vertical"
        android:background="@drawable/background_disable_rec">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/imgCupLogo"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_match"/>

            <TextView
                android:id="@+id/tvLeagueName"
                android:layout_toLeftOf="@+id/imgCupLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="right|center"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                android:text="لیگ"/>

            <TextView
                android:id="@+id/tvStadiumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSubTitle"
                android:text="ورزشگاه"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shadow_b"
            android:backgroundTint="@color/_disable_color"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="@dimen/textSize_14dp"
            android:textStyle="bold"
            android:textColor="@color/textColorSecondary"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <RelativeLayout
                    android:id="@+id/rlAway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgAway"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="@dimen/_50dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_tractor"/>

                    <TextView
                        android:id="@+id/tvAway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgAway"
                        android:layout_centerHorizontal="true"
                        android:gravity="right"
                        android:textSize="@dimen/textSize_12dp"
                        android:textColor="@color/textColorSecondary"
                        android:text="میهمان"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMatchResult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/textSize_20dp"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondary"
                android:text="؟ - ؟"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <RelativeLayout
                    android:id="@+id/rlHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgHome"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="@dimen/_50dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_tractor"/>

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgHome"
                        android:layout_centerHorizontal="true"
                        android:gravity="left"
                        android:textSize="@dimen/textSize_12dp"
                        android:textColor="@color/textColorSecondary"
                        android:text="میزبان"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llYourPredict"
            android:layout_width="match_parent"
            android:padding="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPredictTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize_14dp"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondary"
                android:text="پیش بینی شما"/>

            <TextView
                android:id="@+id/tvPredictResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/textSize_18dp"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondary"
                android:text="؟ - ؟"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFormationPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/background_rectangle_dotted_green">

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="1dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFPredictFormation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:text="؟-؟-؟"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_14dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:text="ترکیب پیش بینی شده:"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="1dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTrueFormation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/green"
                    android:text="؟-؟-؟"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_14dp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:text="ترکیب صحیح تیم:"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="1dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPlayerAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/textColorSecondary"
                    android:text="؟-؟-؟"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_14dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorSecondary"
                    android:text="میزان دقت چینش بازیکنان:"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlShowTrueFormation"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imgLogo2"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_error_outline"
                    app:tint="@color/textColorSubTitle" />

                <TextView
                    android:layout_toLeftOf="@+id/imgLogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSubTitle"
                    android:text="نمایش ترکیب صحیح تیم"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlWinnerList"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_award"/>

            <TextView
                android:layout_toLeftOf="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="right|center"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                android:text="لیست برندگان"/>

            <TextView
                android:id="@+id/tvPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSubTitle"
                android:text="امتیاز این پیش بینی"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
