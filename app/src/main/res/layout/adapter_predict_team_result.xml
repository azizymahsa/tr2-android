<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rectangle_white_15dp"
    android:layout_margin="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14dp"
            android:textColor="@color/gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="1398/00/00"/>

        <TextView
            android:id="@+id/tvCupTitle"
            android:layout_toLeftOf="@+id/imgCupLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_16dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/textColorSecondary"
            android:layout_centerVertical="true"
            android:text="جام"/>

        <ImageView
            android:id="@+id/imgCupLogo"
            android:layout_width="@dimen/_35dp"
            android:layout_height="@dimen/_35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/dotted_line_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5">

            <RelativeLayout
                android:id="@+id/rlContentLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عنوان"
                    android:layout_toRightOf="@+id/imgAway"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColorSecondary"
                    android:gravity="left"/>

                <ImageView
                    android:id="@+id/imgAway"
                    android:layout_width="@dimen/_45dp"
                    android:layout_height="@dimen/_45dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>

            <View
                android:id="@+id/vAway"
                android:layout_toRightOf="@+id/rlContentLeft"
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/vAway2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:id="@+id/vHome2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvMatchResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:background="@color/white"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/textSize_14dp"
                android:layout_margin="2dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5">

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عنوان"
                android:layout_toLeftOf="@+id/imgHome"
                android:layout_centerVertical="true"
                android:textColor="@color/textColorSecondary"
                android:gravity="right"/>

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"/>

            <View
                android:id="@+id/vHome"
                android:layout_toLeftOf="@+id/tvHome"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
