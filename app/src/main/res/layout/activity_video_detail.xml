<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.video.VideoDetailActivity"
    android:layoutDirection="ltr"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@drawable/background_main_header" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent">

            <include layout="@layout/toolbar_back" />

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentLeft="true"
                >
                <TextView
                    android:id="@+id/tvLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize_16dp"
                    android:layout_toRightOf="@id/imgLike"


                    />
                <ImageView
                    android:id="@+id/imgLike"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_like_white"
                    android:tint="@color/gray"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/imgBookmark"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_like_white"
                android:tint="@color/gray"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250dp_r"
            android:layout_marginTop="@dimen/_10dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:background="@color/gray"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>
            <ImageView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:src="@drawable/ic_play_video"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/background_description_video">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:textSize="@dimen/textSize_16dp"
                android:layout_marginTop="@dimen/_10dp"/>

            <TextView
                android:id="@+id/tvTitleVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="@dimen/textSize_18dp"/>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:textSize="@dimen/textSize_14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_marginTop="@dimen/_30dp"
            android:background="@drawable/background_related_video"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:text="فیلم های مرتبط"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:textSize="@dimen/textSize_14dp"
                android:gravity="right"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10dp"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivRelated4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="15dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_play_video"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivRelated3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:adjustViewBounds="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="15dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_video" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivRelated2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:adjustViewBounds="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="15dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_play_video"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivRelated1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="15dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"/>

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_play_video"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>