<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llItem"
    android:gravity="center_vertical"
    android:layoutDirection="ltr"
    android:padding="4dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_weight="1"
        android:background="@color/red" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:contentPaddingTop="8dp"
        app:contentPaddingBottom="4dp"
        app:contentPaddingRight="4dp"
        app:contentPaddingLeft="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDec"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="match_parent"
                        android:tint="@color/grayColor"
                        app:srcCompat="@drawable/ic_error_outline" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/kellyGreen"
                        android:textSize="@dimen/textSize_14dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtCheck"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_weight="0.9"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:text=""
                        android:textColor="@color/kellyGreen"
                        android:textSize="@dimen/textSize_14dp" />

                    <ImageView
                        android:id="@+id/ivFlagCheck"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:src="@drawable/check_mark" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="left"
                    android:text="1398/8/02"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_12dp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="25,000تومان"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_12dp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="right"
                    android:paddingRight="16dp"
                    android:text="ناموفق"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>