<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="102dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <FrameLayout
            android:id="@+id/flLogoToolbar"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_logo_traap"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/imgMenu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:tint="@color/mainMenuColor"
            android:src="@drawable/ic_menu_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">
        
        <Button
            android:id="@+id/btnBuyTicket"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:text="خرید بلیط"
            android:layout_alignParentLeft="true"
            android:textColor="@color/textColorButton"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:foreground="?attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:background="@drawable/button_main_header_background"/>

        <RelativeLayout
            android:id="@+id/rlShirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_shirt"
                android:layout_marginRight="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10"
                android:textStyle="bold"
                android:textColor="@color/textColorTitle"
                android:textSize="@dimen/textSize_12dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_toLeftOf="@+id/rlShirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="مصطفی عابدی"
            android:layout_marginRight="4dp"
            android:textStyle="bold"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textSize_16dp"/>


    </RelativeLayout>

</LinearLayout>
