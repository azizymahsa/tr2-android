<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--        android:background="@drawable/main_background">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/ef_grey">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="lottie/check.json"
                app:lottie_loop="false"/>

            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/background_alpha"
                android:textAppearance="@style/IranSansBold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/green_light"
                android:text="پرداخت وجه با موفقیت انجام شد."/>

            <RelativeLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCardAlert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tvCardNumberDialog"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:gravity="center|bottom"
                    android:textAppearance="@style/IranSansBold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"/>

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/tvCardNumberDoTransfer"-->
<!--                    android:paddingLeft="@dimen/_10sdp"-->
<!--                    android:gravity="left"-->
<!--                    android:textSize="@dimen/_12sdp"-->
<!--                    android:textColor="@color/white"/>-->

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_logo_red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPackTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="150"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/tvTypeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="عنوان بسته:"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMobileNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="150"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="شماره موبایل:"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="150"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="1397/01/02 - 14:25"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="تاریخ و زمان:"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvTrackId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="220"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="1025351"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="شماره پیگیری:"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:id="@+id/llPaymentId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPaymentId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="220"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="1025351"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="شماره پیگیری پرداخت:"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/vPaymentId"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvAmountDialog"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="50,000,000 ریال"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="مبلغ (ریال): "/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:id="@+id/llShopName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMerchantName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="150"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="نام فروشگاه: "/>

                        </LinearLayout>

                        <View
                            android:id="@+id/v1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:id="@+id/llShopPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMerchantPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="150"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="شماره فروشگاه: "/>

                        </LinearLayout>

                        <View
                            android:id="@+id/v2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvNameDialog"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="150"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="شرکت انیاک"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:text="صاحب کارت:"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shadow_b"
                            android:backgroundTint="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvShareImageP"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/textColorSecondary"
                            android:text="اشتراک عکس"/>
<!--                            android:background="@drawable/circle_background_main_2"-->
<!--                            android:textAppearance="@style/IconFonts_R"-->
<!--                            android:text="@string/pic_icon_R"/>-->

                        <TextView
                            android:id="@+id/tvShareP"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_20sdp"
                            android:text="اشتراک متن"/>
<!--                            android:background="@drawable/circle_background_main_2"-->
<!--                            android:textAppearance="@style/IconFonts"-->
<!--                            android:textColor="@color/textColor2"-->
<!--                            android:text="@string/share_icon"/>-->


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvShareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="اشتراک گذاری"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_10dp"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/textColorSecondary"
            android:text="بستن"/>
<!--            android:textAppearance="@style/IconFonts_R"-->
<!--            android:text="@string/close_icon"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>
