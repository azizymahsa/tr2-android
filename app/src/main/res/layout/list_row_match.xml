<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_disable_rec"
    android:orientation="vertical"
    android:padding="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStadiumname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="ورزشگاه تختی"
                android:textColor="#484848"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvLeageName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="لیگ برتر"
                android:textColor="#484848"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/icon_match" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow_b"
        android:backgroundTint="@color/_disable_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="جمعه 23 اسفند 1398"
            android:textColor="#484848"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCenterView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:layout_below="@+id/llHeaderWeekNo"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgGuest"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_guest_test" />

                <TextView
                    android:id="@+id/tvAway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgGuest"
                    android:layout_centerHorizontal="true"
                    android:gravity="right"
                    android:text="میهمان"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/textSize_12dp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imgCenter"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_soccer2" />

            <TextView
                android:id="@+id/tvMatchResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="0 : 0"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/textSize_20dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgHost"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_tractor" />

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgHost"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:text="میزبان"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/textSize_12dp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>