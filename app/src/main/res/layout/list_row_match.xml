<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="@dimen/_10dp"
    android:orientation="vertical"
    android:background="@drawable/background_disable_rec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/tvStadiumname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="@dimen/_10sdp"
                android:textColor="#484848"
                android:text="ورزشگاه تختی"/>

            <TextView
                android:id="@+id/tvLeageName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right|center"
                android:textSize="@dimen/_10sdp"
                android:textColor="#484848"
                android:text="لیگ برتر"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_match"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow_b"
        android:backgroundTint="@color/_disable_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="#484848"
            android:text="جمعه 23 اسفند 1398"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:layout_below="@+id/llHeaderWeekNo"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <RelativeLayout
                android:id="@+id/rlGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgGuest"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_tractor"/>

                <TextView
                    android:id="@+id/tvAway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgGuest"
                    android:layout_centerHorizontal="true"
                    android:gravity="right"
                    android:textSize="@dimen/textSize_12dp"
                    android:textColor="@color/textColorSecondary"
                    android:text="میهمان"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imgCenter"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_soccer2"/>

            <TextView
                android:id="@+id/tvMatchResult"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/textSize_20dp"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondary"
                android:text="0 : 0"/>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <RelativeLayout
                android:id="@+id/rlHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgHost"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_tractor"/>

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgHost"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:textSize="@dimen/textSize_12dp"
                    android:textColor="@color/textColorSecondary"
                    android:text="میزبان"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrBuyEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

       <!-- <TextView
            android:id="@+id/tvPredictResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_weight="0.8"
            android:background="@drawable/background_border_a"
            android:gravity="center"
            android:text=" پیش بینی نتیجه"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_10sdp" />-->
        <TextView
            android:id="@+id/tvPredictResult"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:gravity="center"
            android:background="@drawable/background_border_red"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorTitle"
            android:text=" پیش بینی نتیجه"
            />
        <TextView
            android:id="@+id/tvBuyTicket"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:gravity="center"
            android:background="@drawable/background_border_red"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorTitle"
            android:text="خرید بلیت "/>

    </LinearLayout>

</LinearLayout>
