<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.favoriteCard.FavoriteCardFragment">

    <RelativeLayout
        android:id="@+id/rlVpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/llCardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/arrowleft"
                android:tint="@color/arrowButtonColor"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="100" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:tint="@color/arrowButtonColor"
                android:src="@drawable/arrowright" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llIndicator"
            android:layout_below="@+id/llCardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:spi_dotColor="@color/grayColor"
                app:spi_dotSelectedColor="@color/currentColor"
                app:spi_dotSelectedSize="@dimen/_8sdp"
                app:spi_dotSize="@dimen/_4sdp"
                app:spi_dotSpacing="@dimen/_5sdp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>