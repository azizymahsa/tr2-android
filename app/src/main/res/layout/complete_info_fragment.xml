<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="لطفا اطلاعات افراد را وارد کنید:"
                            android:textColor="#484848" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />
                </LinearLayout>

                <!--ticket1-->
                <LinearLayout
                    android:id="@+id/llBoxTicket1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_20dp"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.8"
                                    android:background="@drawable/dotted_line"

                                    android:gravity="center"

                                    android:orientation="vertical"
                                    android:padding="@dimen/_20dp">

                                    <EditText

                                        android:id="@+id/etNationalCode_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="کد ملی "
                                        android:inputType="number"
                                        android:maxLength="11"                                        android:textColor="@color/_title_black"
                                        android:textColorHint="@color/_disable_color"
                                        android:textSize="@dimen/textSize_10dp" />

                                    <EditText
                                        android:id="@+id/etName_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="نام"
                                        android:maxLength="40"
                                        android:maxLines="1"
                                        android:inputType="text"
                                        android:textColor="@color/_title_black"
                                        android:textColorHint="@color/_disable_color"
                                        android:textSize="@dimen/textSize_10dp" />

                                    <EditText
                                        android:id="@+id/etFamily_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="نام خانوادگی"
                                        android:maxLength="40"
                                        android:maxLines="1"
                                        android:inputType="text"
                                        android:textColor="@color/_title_black"
                                        android:textColorHint="@color/_disable_color"
                                        android:textSize="@dimen/textSize_10dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/top_dis" />

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:scaleType="center"
                                            android:src="@drawable/dot_dis" />

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/bottom_dis" />
                                    </RelativeLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/left_line_invisible"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/tvStation_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:rotation="90"
                                        android:singleLine="true"
                                        android:text="جایگاه 14"
                                        android:textColor="@color/_title_black"
                                        android:textSize="@dimen/textSize_12dp" />


                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgDelete1"
                                android:layout_width="@dimen/_40dp"
                                android:layout_height="@dimen/_40dp"
                                android:layout_marginTop="@dimen/_30dp"
                                android:background="@drawable/edit_text_background_border_white"
                                android:padding="8dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/garbage_icon" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5" />
                </LinearLayout>

                <!--condition-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right|center"
                            android:layout_weight="100"
                            android:gravity="right|center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|center"
                                android:gravity="right|center">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right|center"
                                    android:gravity="right|center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"

                                        android:gravity="right"
                                        android:text="صحت اطلاعات وارد شده را تایید می نمایم."
                                        android:textColor="@color/_title_black"
                                        android:textSize="@dimen/textSize_12dp" />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                                                               android:layout_gravity="right|center"
                                        android:gravity="right|center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="bottom|right"
                                            android:text=" را مطالعه کرده و می پذیرم"
                                            android:textColor="@color/_title_black"
                                            android:textSize="@dimen/textSize_12dp" />
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|center"
                                            android:gravity="right|center"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/txtCondition"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:gravity="bottom|right"
                                                android:text="@string/string_under_line"
                                                android:textAppearance="@style/IranSansBold"
                                                android:textColor="#000"
                                                android:padding="1dp"
                                                android:textSize="@dimen/textSize_12dp" />
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="1dp"
                                                android:background="#000" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right|top"
                                    android:gravity="right|top"
                                    android:orientation="vertical">
                                <CheckBox
                                    android:id="@+id/cbCondition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:buttonTint="@color/currentColor" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />
                </LinearLayout>


                <!--Confirm-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="horizontal">


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100">

                            <include
                                android:id="@+id/btnBackToDetail"
                                layout="@layout/return_button"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/llConfirm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100">

                            <include
                                android:id="@+id/btnPaymentConfirm"
                                layout="@layout/circular_progress_button_peyment"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/llInVisible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100">

                            <include
                                android:id="@+id/btnInVisible"
                                layout="@layout/circular_progress_button_in_visible"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>