<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text=" ریال"
                    android:textColor="@color/chargePackTextColor"
                    android:textSize="@dimen/textSize_14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text=""
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSize_14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مبلغ قابل پرداخت :"
                    android:textColor="@color/chargePackTextColor"
                    android:textSize="@dimen/textSize_14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:gravity="center_vertical|end"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_logo_red"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgLogo"
                    android:layout_alignBottom="@+id/imgLogo"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/imgLogo"
                    android:gravity="center_vertical"
                    android:text="با انجام این پرداخت مبلغ از حساب شما کسر خواهد شد."
                    android:textColor="@color/returnButtonColor"
                    android:textSize="@dimen/textSize_14dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_select_gateway"
                    android:textColor="@color/textColorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgMellat"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/background_disable_rec"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:src="@drawable/ic_banklogo_mellat"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5dp"
                            android:text="بانک ملت"
                            android:textColor="@color/textColorSecondary" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbMellat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/radius_15dp"
                        android:enabled="true"
                        android:buttonTint="@color/textColorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgSaman"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/background_disable_rec"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:src="@drawable/ic_banklogo_saman"
                            android:tint="@color/_disable_color"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5dp"
                            android:text="بانک سامان"
                            android:textColor="@color/_disable_color" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbSaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/radius_15dp"
                        android:clickable="false"
                        android:buttonTint="@color/textColorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgTejarat"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/background_disable_rec"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:src="@drawable/ic_banklogo_tejarat"
                            android:tint="@color/_disable_color"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5dp"
                            android:text="بانک تجارت"
                            android:textColor="@color/_disable_color" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbTejarat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:buttonTint="@color/textColorPrimary" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="100">

                    <include
                        android:id="@+id/btnBack"
                        layout="@layout/return_button" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/llConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="100">

                    <include
                        android:id="@+id/btnBuy"
                        layout="@layout/circular_progress_button_peyment" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/llInVisible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">

                    <include
                        android:id="@+id/btnInVisible"
                        layout="@layout/circular_progress_button_in_visible"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35dp"
                        android:layout_gravity="center" />
                </FrameLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>