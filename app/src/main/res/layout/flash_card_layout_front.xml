<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <!--        android:background="#eaeaea">-->
        <!--android:background="@color/black">-->

        <ImageView
            android:id="@+id/ivLoyal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:id="@+id/lottieView"-->
<!--            android:layout_width="@dimen/_30dp"-->
<!--            android:layout_height="@dimen/_30dp"-->
<!--            android:layout_gravity="center"-->
<!--            app:lottie_autoPlay="true"-->
<!--            app:lottie_fileName="lottie/star.json"-->
<!--            app:lottie_loop="false"/>-->

        <TextView
            android:id="@+id/tvNumberCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="@dimen/_30dp"
            android:text="121321231231321321321"
            android:textAppearance="@style/IranSansBold"
            android:textColor="@color/warmGray"
            android:textSize="@dimen/textSize_16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_weight="170"
                android:gravity="end|center"
                android:maxLines="1"
                android:orientation="horizontal"
                android:singleLine="true"
                android:textColor="@color/warmGray"
                android:textSize="@dimen/textSize_18dp"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cvAddCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_add_card_background"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp">

            <ImageView
                android:id="@+id/imgAdd"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/ic_add_card"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_toStartOf="@+id/imgAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="right"
                android:layout_centerVertical="true"
                android:text="کارت جدید"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/textSize_20dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="کارت بانکی خود را اضافه کنید."
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_16sdp"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/textSize_14dp"/>


    </RelativeLayout>


</RelativeLayout>
