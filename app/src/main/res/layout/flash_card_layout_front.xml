<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        android:background="#eaeaea">-->
    <!--android:background="@color/black">-->

        <ImageView
            android:id="@+id/ivLoyal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/star.json"
            app:lottie_loop="false"/>

        <TextView
            android:id="@+id/tvNumberCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="@dimen/_30dp"
            android:text="121321231231321321321"
            android:textAppearance="@style/IranSansBold"
            android:textColor="@color/warmGray"
            android:textSize="@dimen/textSize_16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvExpireDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10dp"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/warmGray"
                android:textSize="@dimen/textSize_12dp" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="170"
                android:gravity="right|center"
                android:maxLines="1"
                android:orientation="horizontal"
                android:singleLine="true"
                android:textColor="@color/warmGray"
                android:textSize="@dimen/textSize_12dp"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cvAddCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_add_card_background"/>

    </RelativeLayout>


</RelativeLayout>