<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_100dp"
            android:layout_weight="1.8"
            android:gravity="center"
            android:background="@drawable/dotted_line"
            android:orientation="vertical"
            android:padding="@dimen/_10dp">

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_12dp"
                android:maxLines="1"
                android:gravity="center_vertical|right"
                android:text="test"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_12dp"
                android:maxLines="1"
                android:text="last name"
                android:gravity="center_vertical|right"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvNationalCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_12dp"
                android:gravity="center_vertical|right"
                android:text="0012225555"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/top_dis"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/dot_dis"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/bottom_dis"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_100dp"
            android:gravity="center"
            android:background="@drawable/left_line_invisible"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBarcode"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_70dp"
                android:rotation="90"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>