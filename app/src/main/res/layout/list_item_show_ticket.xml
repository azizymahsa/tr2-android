            <TextView
                android:id="@+id/tvClubName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/warmGray"
                android:textSize="@dimen/textSize_14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text=" "
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/top_dis"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/dot_dis"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/bottom_dis"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_80dp"
            android:layout_height="280dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/left_line_invisible"
            android:orientation="horizontal">

             <ImageView
                android:id="@+id/ivBarcode"
                android:layout_width="@dimen/_200dp"
                android:layout_height="@dimen/_60dp"
                android:rotation="90"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>