<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1.8"
            android:gravity="center"
            android:background="@drawable/dotted_line"
            android:orientation="vertical"
            android:padding="@dimen/_10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_12dp"
                android:maxLines="1"
                android:gravity="center"
                android:text="test"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvNationalCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_14dp"
                android:gravity="center"
                android:text="0012225555"
                android:maxLines="1"
                android:textStyle="bold"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvStation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_14dp"
                android:maxLines="1"
                android:text="last name"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"/>


            <LinearLayout
                android:id="@+id/llCenterView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70dp"
                android:layout_below="@+id/llHeaderWeekNo"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/imgGuest"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/img_guest_test" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_soccer" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/imgHost"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/img_tractor" />

                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tvClubName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="ورزشگاه یادگار امام"
                android:textColor="@color/warmGray"
                android:textSize="@dimen/textSize_14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text=" چهارشنبه 10 آبان 1398"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/top_dis"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/dot_dis"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/bottom_dis"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_80dp"
            android:layout_height="250dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/left_line_invisible"
            android:orientation="horizontal">

             <ImageView
                android:id="@+id/ivBarcode"
                android:layout_width="@dimen/_200dp"
                android:layout_height="@dimen/_60dp"
                android:rotation="90"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>