<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_weight="1.8"
            android:gravity="center"
            android:background="@drawable/dotted_line"
            android:orientation="vertical"
            android:padding="@dimen/_10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_12dp"
                android:maxLines="1"
                android:gravity="center"
                android:text=""
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvNationalCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_14dp"
                android:gravity="center"
                android:text=""
                android:maxLines="1"
                android:textStyle="bold"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:textColor="@color/_title_black"
                android:textSize="@dimen/textSize_14dp"
                android:maxLines="1"
                android:text=" "
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"/>
            <LinearLayout
                android:id="@+id/llCenterView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp"
                android:layout_below="@+id/llHeaderWeekNo"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/imgGuest"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="@dimen/_60dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/img_tractor"/>

                    <TextView
                        android:id="@+id/tvGuest"
                        android:layout_below="@+id/imgGuest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignLeft="@+id/imgGuest"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/textSize_12dp"
                        android:text=""/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <ImageView
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_soccer2" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/imgHost"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="@dimen/_60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/img_tractor" />

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_below="@+id/imgHost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignRight="@+id/imgHost"
                        android:textSize="@dimen/textSize_12dp"
                        android:textColor="@color/textColorSecondary"
                        android:text=""/>

                </RelativeLayout>

            </LinearLayout>

