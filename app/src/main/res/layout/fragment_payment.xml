<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.payment.PaymentFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_14dp"
                    android:textColor="@color/chargePackTextColor"
                    android:text=" ریال"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_14dp"
                    android:textColor="@color/textColorPrimary"
                    android:text=""
                    android:layout_marginRight="@dimen/_10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_14dp"
                    android:textColor="@color/chargePackTextColor"
                    android:textStyle="bold"
                    android:text="مبلغ قابل پرداخت :" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_logo_red"/>
<!--                    app:civ_border_color="@color/colorPrimaryDark"-->
<!--                    app:civ_border_width="0dp" />-->

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_toLeftOf="@+id/imgLogo"
                    android:layout_alignTop="@+id/imgLogo"
                    android:layout_alignBottom="@+id/imgLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_14dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorSecondary"
                    android:text="عنوان پرداخت"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPass"
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_height="@dimen/_60dp"
                    android:layout_gravity="center|right"
                    android:hint="رمز دوم کارت را وارد نمایید"
                    app:hintTextAppearance="@style/TextLabel"
                    android:textColorHint="@color/textColorHint"
                    android:theme="@style/EditTextHint">

                    <ir.trap.tractor.android.utilities.ClearableEditText
                        android:id="@+id/etPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:backgroundTint="@color/textColorSecondary"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/textColorSecondary"
                        android:textColorHint="@color/textColorSecondary"
                        android:textSize="@dimen/textSize_16dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCvv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:orientation="horizontal"
                android:visibility="visible">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlCvv2"
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_height="@dimen/_60dp"
                    android:layout_gravity="center|right"
                    app:hintTextAppearance="@style/TextLabel"
                    android:hint="شماره Cvv2 کارت را وارد نمایید"
                    android:textColorHint="@color/textColorHint"
                    android:theme="@style/EditTextHint">

                    <ir.trap.tractor.android.utilities.ClearableEditText
                        android:id="@+id/etCvv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:backgroundTint="@color/textColorSecondary"
                        android:gravity="right|center"
                        android:imeOptions="actionDone"
                        android:inputType="numberPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/textSize_16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExpireDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="60">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtExpYear"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="4dp"
                            android:hint="سال"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:maxLength="2"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="@dimen/textSize_16dp"
                            android:background="@drawable/edit_text_background_border"/>

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_toRightOf="@+id/edtExpYear"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="4dp"
                            android:gravity="top"
                            android:hint="/"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="@dimen/_24sdp" />

                        <EditText
                            android:id="@+id/edtExpMound"
                            android:layout_toRightOf="@+id/tv1"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="4dp"
                            android:hint="ماه"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:maxLength="2"
                            android:singleLine="true"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="@dimen/textSize_16dp"
                            android:background="@drawable/edit_text_background_border"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentRight="true"
                            android:hint="تاریخ انقضا"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="@dimen/textSize_16dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textColorSecondary"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="100"
                    android:layout_marginBottom="2dp">

                    <include
                        android:id="@+id/btnBack"
                        layout="@layout/return_button" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="100"
                    android:layout_marginBottom="2dp">

                    <include
                        android:id="@+id/btnBuy"
                        layout="@layout/circular_progress_button_small" />

                </FrameLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>