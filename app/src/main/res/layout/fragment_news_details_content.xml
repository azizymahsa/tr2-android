<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="3dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tvLikeCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text=""
                android:layout_centerInParent="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/textSize_16dp"
                android:layout_toRightOf="@id/imgLike" />

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_like_white"
                android:tint="@color/gray" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlLike"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:maxLines="2"
            android:text="عنوان"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/textSize_16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlImeges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcImageGallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_favorite_height"/>

        <RelativeLayout
            android:id="@+id/rlArrowLeft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/news_favorite_height"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:tint="@color/buttonArrowColor"
                app:srcCompat="@drawable/ic_border_left_24dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlArrowRight"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/news_favorite_height"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:tint="@color/buttonArrowColor"
                app:srcCompat="@drawable/ic_border_right_24dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/_3sdp"
            app:spi_dotColor="@color/grayColor"
            app:spi_dotSelectedColor="@color/textColorPrimary"
            app:spi_dotSelectedSize="@dimen/_8sdp"
            app:spi_dotSize="@dimen/_4sdp"
            app:spi_dotSpacing="@dimen/_5sdp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBookmark"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginLeft="16dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_bookmark_border"
            android:background="@drawable/background_rectangle_white_8dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textHint"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textSize="@dimen/textSize_14dp"
            android:gravity="right" />

    </RelativeLayout>

    <com.traap.traapapp.utilities.JustifiedTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/dotted"
        android:textColor="@color/textHint"
        android:layout_margin="@dimen/_10dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/textSize_14dp"
        android:gravity="right|center_vertical" />

    <com.traap.traapapp.utilities.JustifiedTextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/textHint"
        android:layout_margin="@dimen/_10dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/textSize_16dp"
        android:gravity="right" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewsArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="آرشیو اخبار"
            android:textColor="@color/textColorPrimary"
            android:layout_alignParentLeft="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginBottom="4dp"
            android:textSize="@dimen/textSize_12dp"
            android:background="@drawable/background_border_a" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_toRightOf="@+id/tvNewsArchive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text=""
            android:textColor="@color/textHint"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textSize="@dimen/textSize_16dp"
            android:gravity="right" />

    </RelativeLayout>


</LinearLayout>