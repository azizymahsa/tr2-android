<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvLikeCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@id/imgLike"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/textSize_16dp" />

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:tint="@color/gray"
                app:srcCompat="@drawable/ic_like_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/rlLike"
            android:gravity="right"
            android:maxLines="2"
            android:text="عنوان"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/textSize_16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlImegess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcImageGallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_favorite_height" />

        <RelativeLayout
            android:id="@+id/rlArrowLeft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/news_favorite_height"
            android:layout_alignParentLeft="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:tint="@color/buttonArrowColor"
                app:srcCompat="@drawable/ic_border_left_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlArrowRight"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/news_favorite_height"
            android:layout_alignParentRight="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:tint="@color/buttonArrowColor"
                app:srcCompat="@drawable/ic_border_right_24dp" />

        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivBigLike"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@drawable/big_like"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="center"
            android:visibility="gone"
            app:riv_corner_radius="10dp"
            app:riv_mutate_background="true"
            app:riv_oval="false" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:visibility="visible"
            app:spi_dotColor="@color/grayColor"
            app:spi_dotSelectedColor="@color/textColorPrimary"
            app:spi_dotSelectedSize="@dimen/_8sdp"
            app:spi_dotSize="@dimen/_4sdp"
            app:spi_dotSpacing="@dimen/_5sdp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgBookmark"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/_35dp"
            android:layout_height="@dimen/_35dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/background_rectangle_border_color_8dp"
            android:padding="3dp"
            android:tint="@color/borderBackgroundColor"
            app:srcCompat="@drawable/ic_bookmark_border" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_toRightOf="@+id/imgBookmark"
            android:gravity="right"
            android:textColor="@color/textHint"
            android:textSize="@dimen/textSize_14dp" />

    </RelativeLayout>

    <com.traap.traapapp.utilities.JustifiedTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/background_rectangle_dotted_15dp"
        android:gravity="right|center_vertical"
        android:padding="@dimen/_10dp"
        android:text=""
        android:textColor="@color/textHint"
        android:textSize="@dimen/textSize_14dp" />

    <com.traap.traapapp.utilities.JustifiedTextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:gravity="right"
        android:padding="@dimen/_10dp"
        android:text=""
        android:textColor="@color/textHint"
        android:textSize="@dimen/textSize_16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvNewsArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_border_a"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="24dp"
            android:paddingBottom="8dp"
            android:text="آرشیو اخبار"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSize_12dp" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_toRightOf="@+id/tvNewsArchive"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="right"
            android:text=""
            android:textColor="@color/textHint"
            android:textSize="@dimen/textSize_16dp" />

    </RelativeLayout>


</LinearLayout>
