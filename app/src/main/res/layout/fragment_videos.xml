<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/nestedScroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:foreground="?attr/selectableItemBackground"
        android:text="جدیدترین ها"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_12dp" />

<!--
    <com.example.moeidbannerlibrary.banner.BannerLayout
        android:id="@+id/bNewestVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250dp_r"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        app:autoPlaying="true"
        app:centerScale="1.8"
        app:itemSpace="5"
        app:moveSpeed="0.5"
        app:showIndicator="false"/>-->
    <com.example.moeidbannerlibrary.banner.BannerLayout
        android:id="@+id/bNewestVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:textAlignment="center"
        app:autoPlaying="true"
        app:centerScale="1.3"
        app:itemSpace="5"
        app:moveSpeed="0.9"
        app:showIndicator="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:weightSum="3.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvArchiveVideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="آرشیو ویدیو"
            android:textColor="@color/redBack"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_5dp"
            android:textSize="@dimen/textSize_10dp"
            android:background="@drawable/background_border_a"
            />

        <TextView
            android:id="@+id/tvMyFavoriteVideo"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="ویدیو های مورد علاقه من"
            android:textColor="@color/redBack"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginStart="@dimen/_10dp"
            android:textSize="@dimen/textSize_10dp"
            android:background="@drawable/background_border_a"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="top|right"
            android:singleLine="true"
            android:text="محبوب ترین ها"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_12dp"


            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvEmptyFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:visibility="gone"
        android:maxLines="2"
        android:gravity="center"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_40dp"
        android:textSize="@dimen/textSize_14dp"
        android:text="هیچ ویدیویی در این گروه یافت نشد."/>
    <LinearLayout
        android:id="@+id/llFavorites"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivFavorite2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="15dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_play_video"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivFavorite3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                app:riv_corner_radius="15dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_play_video"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivFavorite1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:riv_corner_radius="15dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"/>
            <ImageView
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:src="@drawable/ic_play_video"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:text="دسته بندی ها"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textSize="@dimen/textSize_12dp"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textHint"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategoryTitles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textHint"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:visibility="gone"
            android:maxLines="2"
            android:gravity="center"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:textSize="@dimen/textSize_14dp"
            android:text="هیچ ویدیویی در این گروه یافت نشد."/>
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>
