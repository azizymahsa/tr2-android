<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:elastic="http://schemas.android.com/tools"
    xmlns:gastudio="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/alert_backgroundd">

        <TextView
            android:id="@+id/tvDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAppearance="@style/IranSansBold"
            android:text="در حال دریافت آخرین نسخه تراپ..."
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <com.gastudio.downloadloadding.library.GADownloadingView
            android:id="@+id/ga_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gastudio:arrow_color="@color/textColorPrimary"
            gastudio:loading_circle_back_color="@color/textColorPrimary"
            gastudio:done_text_color="@color/textColorPrimary" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_below="@+id/progress"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.cardview.widget.CardView>